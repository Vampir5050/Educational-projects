@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Weather search by city</h1>
    <form asp-action="Weather" asp-controller="Home" method="get" class="input-group mb-3">
        <input required name="city" type="text" class="form-control" placeholder="City" aria-label="Recipient's username" aria-describedby="button-addon2">
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Search</button>
    </form>

</div>
